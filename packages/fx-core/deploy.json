{
    "type": "group",
    "name": "fx.deploy",
    "actions": [
        {
            "type": "group",
            "mode": "parallel",
            "actions": [
                {
                    "name": "call:bot-code.build",
                    "type": "call",
                    "targetAction": "bot-code.build",
                    "required": false
                }
            ]
        },
        {
            "type": "call",
            "targetAction": "azure-web-app.deploy",
            "required": false,
            "inputs": {
                "azure-web-app": {
                    "folder": "bot"
                }
            }
        }
    ]
}