{
  "compilerOptions": {
    "module": "es6",
    "outDir": "./dist-esm",
    "declarationDir": "./types",
    "target": "ES2015",
    "lib": ["DOM"],
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": false, // TODO: temporarily disabled
    "noUnusedParameters": false, // TODO: temporarily disabled
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "types",
    "temp",
    "browser",
    "dist",
    "dist-samples",
    "dist-esm",
    "./samples/**/*.ts",
    "resources",
    "test/*.ts",
    "test/integration/node",
    "test/e2e/"
  ]
}
