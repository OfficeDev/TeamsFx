{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "description": "The schema of TeamsFx configuration.",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "azure": {
      "type": "object",
      "description": "The Azure resource related configuration.",
      "properties": {
        "subscriptionId": {
          "type": "string",
          "description": "The default subscription to provision Azure resources.",
          "minLength": 1
        },
        "resourceGroupName": {
          "type": "string",
          "description": "The default resource group of Azure resources.",
          "minLength": 1,
          "pattern": "^[-\\w\\._\\(\\)]+$"
        }
      },
      "additionalProperties": false
    },
    "manifest": {
      "type": "object",
      "description": "The Teams App mainfest related configuration.",
      "properties": {
        "description": {
          "type": "string"
        },
        "values": {
          "type": "object",
          "description": "Configs to customize the Teams app manifest.",
          "properties": {
            "appName": {
              "type": "object",
              "description": "Teams app name.",
              "properties": {
                "short": {
                  "type": "string",
                  "description": "A short display name for teams app.",
                  "maxLength": 30
                },
                "full": {
                  "type": "string",
                  "description": "The full name for teams app.",
                  "maxLength": 100
                }
              }
            },
            "description": {
              "type": "object",
              "description": "Teams app description.",
              "properties": {
                "short": {
                  "type": "string",
                  "description": "A short description of the app used when space is limited. Maximum length is 80 characters.",
                  "maxLength": 80
                },
                "full": {
                  "type": "string",
                  "description": "The full description of the app. Maximum length is 4000 characters.",
                  "maxLength": 4000
                }
              }
            }
          }
        }
      },
      "required": ["values"]
    },
    "skipAddingSqlUser": {
      "type": "boolean",
      "description": "Skip to add user during SQL provision."
    }
  },
  "additionalProperties": false,
  "required": ["azure", "manifest"]
}
