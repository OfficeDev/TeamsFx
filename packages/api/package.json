    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "eslint": "^7.22.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@azure/core-http": "^1.2.2",
    "@azure/ms-rest-nodeauth": "^3.0.6",
