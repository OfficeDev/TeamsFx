  "keywords": [
    "TeamsFx",
    "api"
  ],
  "author": "Microsoft Corporation",
  "publisher": "Microsoft",
  "repository": {
    "type": "git",
    "url": "https://github.com/OfficeDev/TeamsFx"
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "lint:staged": "lint-staged",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
