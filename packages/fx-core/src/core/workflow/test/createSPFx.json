{
    "name": "fx.create",
    "type": "group",
    "actions": [
        {
            "type": "group",
            "name": "fx.init",
            "actions": [
                {
                    "type": "function",
                    "name": "fx.initConfig"
                },
                {
                    "type": "call",
                    "targetAction": "teams-manifest.init",
                    "required": true
                }
            ]
        },
        {
            "type": "group",
            "name": "resource.add+fx.persistBicep",
            "inputs": {
                "bicep": {}
            },
            "actions": [
                {
                    "type": "group",
                    "name": "call:resource.add",
                    "mode": "parallel",
                    "actions": [
                        {
                            "type": "group",
                            "name": "teams-tab.add",
                            "mode": "parallel",
                            "actions": [
                                {
                                    "name": "teams-tab.add",
                                    "type": "function"
                                },
                                {
                                    "name": "call:tab-scaffold.generateCode",
                                    "type": "call",
                                    "required": false,
                                    "targetAction": "tab-scaffold.generateCode",
                                    "inputs": {
                                        "tab-scaffold": {
                                            "name": "teams-tab",
                                            "framework": "spfx",
                                            "hostingResource": "spfx",
                                            "folder": "SPFx"
                                        }
                                    }
                                },
                                {
                                    "name": "call:spfx.add",
                                    "type": "call",
                                    "required": false,
                                    "targetAction": "spfx.add"
                                },
                                {
                                    "name": "call:teams-manifest.addCapability",
                                    "type": "call",
                                    "required": true,
                                    "targetAction": "teams-manifest.addCapability",
                                    "inputs": {
                                        "teams-manifest": {
                                            "capabilities": [
                                                {
                                                    "name": "staticTab"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ],
                            "inputs": {
                                "teams-tab": {
                                    "name": "teams-tab",
                                    "framework": "spfx",
                                    "hostingResource": "spfx",
                                    "folder": "SPFx"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "call",
                    "required": true,
                    "targetAction": "fx.persistBicep"
                }
            ]
        }
    ]
}