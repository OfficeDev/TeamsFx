{
  "name": "teamsfx-cli",
  "version": "1.0.0",
  "description": "",
  "author": "Microsoft Corpoeration",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OfficeDev/TeamsFx.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css lib/",
    "build": "tsc -p ./ && yarn copy-files",
    "watch": "tsc -w -p ./ && yarn copy-files",
    "test:e2e:actions": "mocha --no-timeouts --parallel --require ts-node/register test/e2e/**/*.test.ts",
    "check-format": "prettier --list-different --config .prettierrc.json --ignore-path .prettierignore \"src/**/*.ts\" \"*.{js,json}\"",
    "format": "prettier --write --config .prettierrc.json --ignore-path .prettierignore \"src/**/*.ts\" \"*.{js,json}\"",
    "lint:fix": "eslint --config .eslintrc.js package.json src --ext .ts --fix --fix-type [problem,suggestion]",
    "lint": "eslint --config .eslintrc.js package.json src --ext .ts"
  },
  "keywords": [
    "teamsfx",
    "teamsfx-cli"
  ],
  "preferGlobal": true,
  "bin": {
    "teamsfx": "./lib/cli.js"
  },
  "devDependencies": {
    "@azure/arm-subscriptions": "^3.0.0",
    "@shared/eslint-config": "^0.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-spies": "^1.0.3",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^8.0.1",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/underscore": "^1.11.0",
    "@types/yargs": "^16.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.8",
    "jsonschema": "^1.4.0",
    "mocha": "^8.3.0",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-parallel-tests": "^2.3.0",
    "nyc": "^15.1.0",
    "prettier": "^1.16.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "@azure/identity": "^1.2.3",
    "@azure/ms-rest-nodeauth": "^3.0.7",
    "async-mutex": "^0.3.1",
    "colors": "^1.4.0",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "fx-api": "^1.0.0",
    "fx-core": "^1.0.0",
    "open": "^8.0.5",
    "underscore": "^1.12.1",
    "yargs": "^16.2.0"
  }
}
