{
    "name": "fx.create",
    "type": "group",
    "actions": [
        {
            "type": "group",
            "name": "fx.init",
            "actions": [
                {
                    "type": "function",
                    "name": "fx.initConfig"
                },
                {
                    "type": "call",
                    "targetAction": "teams-manifest.init",
                    "required": true
                }
            ]
        },
        {
            "type": "group",
            "name": "resource.add+fx.persistBicep",
            "inputs": {
                "bicep": {}
            },
            "actions": [
                {
                    "type": "group",
                    "name": "call:resource.add",
                    "mode": "parallel",
                    "actions": [
                        {
                            "type": "group",
                            "name": "teams-tab.add",
                            "mode": "parallel",
                            "actions": [
                                {
                                    "name": "teams-bot.add",
                                    "type": "function"
                                },
                                {
                                    "name": "call:bot-scaffold.generateCode",
                                    "type": "call",
                                    "required": false,
                                    "targetAction": "bot-scaffold.generateCode",
                                    "inputs": {
                                        "bot-scaffold": {
                                            "name": "teams-bot",
                                            "hostingResource": "azure-function",
                                            "folder": "bot",
                                            "scenarios": [
                                                "notification"
                                            ]
                                        }
                                    }
                                },
                                {
                                    "name": "call:azure-function.generateBicep",
                                    "type": "call",
                                    "required": false,
                                    "targetAction": "azure-function.generateBicep"
                                },
                                {
                                    "name": "call:teams-manifest.addCapability",
                                    "type": "call",
                                    "required": true,
                                    "targetAction": "teams-manifest.addCapability",
                                    "inputs": {
                                        "teams-manifest": {
                                            "capabilities": [
                                                {
                                                    "name": "Bot"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ],
                            "inputs": {
                                "teams-bot": {
                                    "name": "teams-bot",
                                    "hostingResource": "azure-function",
                                    "folder": "bot",
                                    "scenarios": [
                                        "notification"
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "call",
                    "required": true,
                    "targetAction": "fx.persistBicep"
                }
            ]
        }
    ]
}