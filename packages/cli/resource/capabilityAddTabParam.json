[
    {
        "data": {
            "name": "capabilities",
            "title": "Select Capabilities to add",
            "type": "multiSelect",
            "option": [
                {
                    "id": "Tab",
                    "label": "Tab",
                    "description": "Embeds a web-based app experience in a tab in a Teams chat, channel, or personal workspace."
                }
            ],
            "default": [
                "Tab"
            ],
            "hide": true
        }
    },
    {
        "data": {
            "name": "host-type",
            "title": "Select front-end hosting type",
            "type": "singleSelect",
            "option": [
                {
                    "id": "Azure",
                    "label": "Azure",
                    "description": "Azure Cloud"
                },
                {
                    "id": "SPFx",
                    "label": "SPFx",
                    "description": "SharePoint Framework"
                }
            ],
            "default": "Azure"
        }
    },
    {
        "data": {
            "name": "tab-scopes",
            "description": "Select tab scopes",
            "type": "multiSelect",
            "option": [
                "personal",
                "group"
            ],
            "default": [
                "personal"
            ]
        }
    },
    {
        "data": {
            "name": "azure-resources",
            "title": "Additional cloud resources",
            "type": "multiSelect",
            "option": [
                {
                    "id": "sql",
                    "label": "sql",
                    "description": "Azure SQL Database"
                },
                {
                    "id": "function",
                    "label": "function",
                    "description": "New APIs from Azure Functions"
                }
            ],
            "default": []
        },
        "condition": {
            "equals": "Azure"
        }
    },
    {
        "data": {
            "name": "node-version",
            "description": "Please select a node version for the Azure function app.",
            "type": "singleSelect",
            "default": "12",
            "option": [
                "10",
                "12",
                "14"
            ]
        }
    },
    {
        "data": {
            "name": "function-name",
            "description": "Please provide function name.",
            "type": "text",
            "default": "myFunc",
            "validation": {
                "namespace": "fx-solution-azure/fx-resource-function",
                "method": "validateFunctionName"
            }
        }
    },
    {
        "data": {
            "type": "singleSelect",
            "name": "spfx-framework-type",
            "title": "Which framework would you like to use?",
            "option": [
                "none",
                "react"
            ],
            "default": "none"
        }
    },
    {
        "data": {
            "type": "text",
            "name": "spfx-webpart-name",
            "title": "Webpart Name",
            "default": "helloworld",
            "validation": {
                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
            }
        }
    },
    {
        "data": {
            "type": "text",
            "name": "spfx-webpart-desp",
            "title": "Webpart Description",
            "default": "helloworld description",
            "validation": {
                "required": true
            }
        }
    }
]
