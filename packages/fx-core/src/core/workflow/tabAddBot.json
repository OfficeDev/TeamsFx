{
    "type": "group",
    "name": "resource.add+fx.persistBicep",
    "inputs": {
        "bicep": {}
    },
    "actions": [
        {
            "type": "group",
            "name": "call:resource.add",
            "mode": "parallel",
            "actions": [
                {
                    "type": "group",
                    "name": "teams-tab.add",
                    "mode": "parallel",
                    "actions": [
                        {
                            "name": "teams-bot.add",
                            "type": "function"
                        },
                        {
                            "name": "call:bot-scaffold.generateCode",
                            "type": "call",
                            "required": false,
                            "targetAction": "bot-scaffold.generateCode",
                            "inputs": {
                                "bot-scaffold": {
                                    "name": "teams-bot",
                                    "scenarios": [
                                        "default"
                                    ],
                                    "folder": "bot",
                                    "hostingResource": "azure-web-app"
                                }
                            }
                        },
                        {
                            "name": "call:azure-web-app.generateBicep",
                            "type": "call",
                            "required": false,
                            "targetAction": "azure-web-app.generateBicep"
                        },
                        {
                            "name": "call:teams-manifest.addCapability",
                            "type": "call",
                            "required": true,
                            "targetAction": "teams-manifest.addCapability",
                            "inputs": {
                                "teams-manifest": {
                                    "capabilities": [
                                        {
                                            "name": "Bot"
                                        }
                                    ]
                                }
                            }
                        }
                    ],
                    "inputs": {
                        "teams-bot": {
                            "name": "teams-bot",
                            "scenarios": [
                                "default"
                            ],
                            "folder": "bot",
                            "hostingResource": "azure-web-app"
                        }
                    }
                }
            ]
        },
        {
            "type": "call",
            "required": true,
            "targetAction": "fx.persistBicep"
        }
    ]
}