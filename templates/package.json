{
    "name": "templates",
    "version": "0.3.1",
    "private": "true",
    "license": "MIT",
    "scripts": {
        "check-sensitive": "npx eslint --plugin 'no-secrets' --cache --ignore-pattern 'package.json' --ignore-pattern 'package-lock.json'",
        "precommit": "npm run check-sensitive && lint-staged",
        "version": "bash ../.github/scripts/pkg-version.sh template-sync && bash ../.github/scripts/pkg-version.sh core-template"
    },
    "templates": [
        "blazor-base/csharp/default",
        "bot/csharp/default",
        "bot/js/default",
        "bot/ts/default",
        "function-base/js/default",
        "function-base/ts/default",
        "function-triggers/js/HTTPTrigger",
        "function-triggers/ts/HTTPTrigger",
        "tab/csharp/default",
        "tab/js/default",
        "tab/ts/default"
    ],
    "devDependencies": {
        "@shared/eslint-config": "file:../packages/eslint-config",
        "@shared/prettier-config": "file:../packages/prettier-config",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-react-app": "^7.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-no-secrets": "^0.8.9",
        "eslint-plugin-prettier": "^4.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.4.1",
        "semver": "^7.3.5",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3"
    },
    "lint-staged": {
        "*.{js,jsx,css,ts,tsx}": [
            "npx eslint --cache --fix --quiet"
        ]
    }
}