{
    "type": "group",
    "name": "resource.add+fx.persistBicep",
    "inputs": {
        "bicep": {}
    },
    "actions": [
        {
            "type": "group",
            "name": "call:resource.add",
            "mode": "parallel",
            "actions": [
                {
                    "type": "call",
                    "required": true,
                    "targetAction": "azure-function.generateBicep",
                    "inputs": {
                        "azure-function": {
                            "name": "azure-function"
                        }
                    }
                },
                {
                    "type": "call",
                    "required": true,
                    "targetAction": "function-scaffold.generateCode",
                    "inputs": {
                        "function-scaffold": {
                            "name": "function-scaffold",
                            "folder": "myapi"
                        }
                    }
                }
            ]
        },
        {
            "type": "call",
            "required": true,
            "targetAction": "fx.persistBicep"
        }
    ]
}