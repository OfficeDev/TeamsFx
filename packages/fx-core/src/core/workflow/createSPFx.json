{
    "name": "fx.create",
    "type": "group",
    "inputs": {
        "bicep": {}
    },
    "actions": [
        {
            "type": "group",
            "name": "fx.init",
            "actions": [
                {
                    "type": "function",
                    "name": "fx.initConfig"
                },
                {
                    "type": "call",
                    "targetAction": "teams-manifest.init",
                    "required": true
                }
            ]
        },
        {
            "type": "group",
            "name": "teams-tab.add",
            "mode": "parallel",
            "actions": [
                {
                    "name": "teams-tab.add",
                    "type": "function"
                },
                {
                    "name": "call:tab-scaffold.generateCode",
                    "type": "call",
                    "required": false,
                    "targetAction": "tab-scaffold.generateCode"
                },
                {
                    "name": "call:spfx.generateBicep",
                    "type": "call",
                    "required": false,
                    "targetAction": "spfx.generateBicep"
                },
                {
                    "name": "call:teams-manifest.addCapability",
                    "type": "call",
                    "required": true,
                    "targetAction": "teams-manifest.addCapability",
                    "inputs": {
                        "teams-manifest": {
                            "capabilities": [
                                {
                                    "name": "staticTab"
                                }
                            ]
                        }
                    }
                }
            ],
            "inputs": {
                "teams-tab": {
                    "framework": "spfx",
                    "hostingResource": "spfx"
                }
            }
        },
        {
            "type": "call",
            "required": true,
            "targetAction": "fx.persistBicep"
        }
    ]
}