{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "55dd6b57-7058-43fd-b76d-3323f4721395",
    "name": "teamsfx-cli-task",
    "friendlyName": "Teamsfx CLI Task",
    "description": "Azure DevOps Task to help Teams App Developers build their CI/CD pipelines.",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Ivan He",
    "version": {
        "Major": 0,
        "Minor": 3,
        "Patch": 3
    },
    "instanceNameFormat": "Teams App CI/CD - $(commands)",
    "inputs": [
        {
            "name": "commands",
            "type": "string",
            "label": "Commands",
            "helpMarkDown": "The commands list in order which includes top-commands, sub-commands and positional parameters."
        },
        {
            "name": "verbose",
            "type": "boolean",
            "label": "Verbose",
            "defaultValue": "false"
        },
        {
            "name": "version",
            "type": "boolean",
            "label": "Version",
            "defaultValue": "true"
        },
        {
            "name": "debug",
            "type": "boolean",
            "label": "Debug",
            "defaultValue": "false"
        },
        {
            "name": "help",
            "type": "boolean",
            "label": "Help",
            "defaultValue": "false"
        },
        {
            "name": "action",
            "type": "pickList",
            "label": "Action",
            "options": {
                "show": "show",
                "login": "login",
                "logout": "logout",
                "set": "set"
            }
        },
        {
            "name": "tenant",
            "type": "string",
            "label": "Tenant"
        },
        {
            "name": "folder",
            "type": "filePath",
            "label": "Folder"
        },
        {
            "name": "subscription",
            "type": "string",
            "label": "Subscription"
        },
        {
            "name": "interactive",
            "type": "boolean",
            "label": "Interactive",
            "defaultValue": "true"
        },
        {
            "name": "scratch",
            "type": "pickList",
            "label": "Scratch",
            "options": {
                "yes": "yes",
                "no": "no"
            },
            "defaultValue": "yes"
        },
        {
            "name": "hostType",
            "type": "pickList",
            "label": "Host Type",
            "options": {
                "azure": "azure",
                "spfx": "spfx"
            },
            "defaultValue": "azure"
        },
        {
            "name": "spfxFrameworkType",
            "type": "pickList",
            "label": "Spfx Framework Type",
            "options": {
                "none": "none",
                "react": "react"
            },
            "defaultValue": "none"
        },
        {
            "name": "spfxWebpartName",
            "type": "string",
            "label": "Spfx Webpart Name"
        },
        {
            "name": "spfxWebpartDesp",
            "type": "string",
            "label": "Spfx Webpart Description"
        },
        {
            "name": "azureResources",
            "type": "multiLine",
            "label": "AzureResources"
        },
        {
            "name": "capabilities",
            "type": "multiLine",
            "label": "Capabilities"  
        }
    ],
    "execution": {
        "Node": {
            "target": "dist/index.js"
        }
    }
}
