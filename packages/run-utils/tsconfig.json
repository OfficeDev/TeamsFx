{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "lib",
    "lib": [
      "es5",
    ],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}