{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--no-timeouts",
        "--colors",
        "${workspaceFolder}/tests/**/*.test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "skipFiles": [
          "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\build\\server\\server.js",
      "outFiles": [
          "${workspaceFolder}/**/*.js"
      ],
      "preLaunchTask": "npm: build"
  }
  ]
}
