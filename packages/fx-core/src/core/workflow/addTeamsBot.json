{
    "name": "fx.add",
    "type": "group",
    "actions": [
        {
            "type": "group",
            "name": "teams-bot.addInstance",
            "actions": [
                {
                    "name": "teams-bot.addInstance",
                    "type": "function"
                },
                {
                    "type": "call",
                    "required": true,
                    "targetAction": "teams-manifest.addCapability",
                    "inputs": {
                        "capabilities": [
                            "Bot"
                        ]
                    }
                }
            ]
        },
        {
            "name": "nodejs-bot.generateCode",
            "type": "call",
            "required": true,
            "targetAction": "bot-scaffold.generateCode"
        },
        {
            "type": "call",
            "required": true,
            "targetAction": "azure-web-app.generateBicep"
        },
        {
            "type": "call",
            "required": true,
            "targetAction": "fx.persistBicep"
        }
    ]
}